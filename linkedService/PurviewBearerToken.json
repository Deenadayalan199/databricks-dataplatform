{
	"name": "PurviewBearerToken",
	"properties": {
		"description": "AAD Service Principal Authentication that returns a bearer token for Purview endpoint",
		"parameters": {
			"TenantID": {
				"type": "String"
			},
			"ClientID": {
				"type": "String"
			}
		},
		"annotations": [],
		"type": "RestService",
		"typeProperties": {
			"url": "https://login.microsoftonline.com",
			"enableServerCertificateValidation": true,
			"authenticationType": "AadServicePrincipal",
			"servicePrincipalId": "@{linkedService().ClientID}",
			"servicePrincipalKey": {
				"type": "AzureKeyVaultSecret",
				"store": {
					"referenceName": "keyvault01",
					"type": "LinkedServiceReference"
				},
				"secretName": "ba-purview-spn"
			},
			"tenant": "@{linkedService().TenantID}",
			"aadResourceId": "https://management.azure.com"
		},
		"connectVia": {
			"referenceName": "AutoResolveIntegrationRuntime",
			"type": "IntegrationRuntimeReference"
		}
	}
}