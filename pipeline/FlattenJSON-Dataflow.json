{
	"name": "FlattenJSON-Dataflow",
	"properties": {
		"activities": [
			{
				"name": "FlattenJson1",
				"type": "ExecuteDataFlow",
				"dependsOn": [],
				"policy": {
					"timeout": "1.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"dataflow": {
						"referenceName": "FlattenJson-CosmosDB",
						"type": "DataFlowReference",
						"parameters": {
							"container": {
								"value": "'@{pipeline().parameters.srcCosmosContainer}'",
								"type": "Expression"
							},
							"destFileSystem": {
								"value": "'@{pipeline().parameters.destFileSystem}'",
								"type": "Expression"
							},
							"destFolder": {
								"value": "'@{pipeline().parameters.destFolder}'",
								"type": "Expression"
							},
							"destFile": {
								"value": "'@{pipeline().parameters.destFile}'",
								"type": "Expression"
							}
						},
						"datasetParameters": {
							"MoviesCosmosDB": {
								"container": {
									"value": "@pipeline().parameters.srcCosmosContainer",
									"type": "Expression"
								}
							},
							"SilverMovies": {
								"fileSystem": {
									"value": "@pipeline().parameters.destFileSystem",
									"type": "Expression"
								},
								"folder": {
									"value": "@pipeline().parameters.destFolder",
									"type": "Expression"
								}
							}
						}
					},
					"compute": {
						"coreCount": 8,
						"computeType": "General"
					},
					"traceLevel": "Fine"
				}
			}
		],
		"parameters": {
			"srcCosmosContainer": {
				"type": "string",
				"defaultValue": "movies"
			},
			"destFileSystem": {
				"type": "string",
				"defaultValue": "curated-silver"
			},
			"destFolder": {
				"type": "string",
				"defaultValue": "movies"
			},
			"destFile": {
				"type": "string",
				"defaultValue": "movies[n].parquet"
			}
		},
		"folder": {
			"name": "Samples"
		},
		"annotations": []
	}
}